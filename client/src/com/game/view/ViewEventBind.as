package com.game.view
{
	import starling.display.DisplayObject;

	public class ViewEventBind
	{
		public var target:DisplayObject;
		
		public var phase:String = '';
		
		public var callback:Function;
		
		public var isReturnParam:Boolean = false;
		
		public function ViewEventBind(target:DisplayObject, phase:String, callback:Function, isParam:Boolean = false)
		{
			this.target = target;
			this.phase = phase;
			this.callback = callback;
			this.isReturnParam = isParam;
		}
	}
}